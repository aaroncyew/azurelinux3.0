{
    "Disks": [
        {
            "PartitionTableType": "gpt",
            "MaxSize": 7000,
            "Artifacts": [
                {
                    "Name": "azurelinux-gen2",
                    "Type": "vhdx"
                },
                {
                    "Name": "azurelinux-gen2",
                    "Type": "vhd"
                }
            ],
            "Partitions": [
                {
                    "ID": "efi",
                    "Flags": [
                        "esp",
                        "boot"
                    ],
                    "Start": 1,
                    "End": 1065,
                    "FsType": "fat32",
                    "Type": "esp"
                },
                {
                    "ID": "rootfs",
                    "Start": 1065,
                    "End": 3065,
                    "FsType": "ext4",
                    "Type": "linux-root-amd64"
                },
                {
                    "ID": "data",
                    "Name": "data",
                    "Start": 3065,
                    "End": 0,
                    "FsType": "ext4",
                    "Type": "linux"
                }
            ]
        }
    ],
    "SystemConfigs": [
        {
            "Name": "Standard",
            "BootType": "efi",
            "PartitionSettings": [
                {
                    "ID": "efi",
                    "MountPoint": "/efi",
                    "MountOptions" : "umask=0077"
                },
                {
                    "ID": "rootfs",
                    "MountPoint": "/"
                },
                {
                    "ID": "data",
                    "MountPoint": "/data"
                }
            ],
            "PackageLists": [
                "packagelists/coal-packages.json"
            ],
            "AdditionalFiles": {
                "additionalconfigs/cloud-init.cfg": "/etc/cloud/cloud.cfg",
                "additionalconfigs/chrony.cfg": "/etc/chrony.conf",
                "additionalconfigs/10-azure-eth0.network": "/etc/systemd/network/10-azure-eth0.network",
                "additionalconfigs/wait-for-ptp-hyperv.conf": "/etc/systemd/system/chronyd.service.d/wait-for-ptp-hyperv.conf",
                "additionalconfigs/51-ptp-hyperv.rules": "/etc/udev/rules.d/51-ptp-hyperv.rules",
                "additionalconfigs/sdboot-loader.conf": "/efi/loader/loader.conf"
            },
            "PostInstallScripts": [
                {
                    "Path": "additionalconfigs/configure-systemd-networkd.sh"
                }
            ],
            "FinalizeImageScripts": [
                {
                    "Path": "additionalconfigs/coal.sh"
                },
                {
                    "Path": "scripts/cleanup.sh"
                }
            ],
            "KernelOptions": {
                "default": "kernel"
            },
            "Hostname": "azurelinux",
            "DisableRpmDocs": true,
            "Users": [
                {
                    "Name": "root",
                    "Password": {{# SET THIS BEFORE BUILDING #}}
                }
            ]
        }
    ]
}
